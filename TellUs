<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"></script>

<script>
document.getElementById('areaCode').addEventListener('input', function (e) {
    if (this.value.length === 3) {
        document.getElementById('firstThree').focus();
    }
});

document.getElementById('firstThree').addEventListener('input', function (e) {
    if (this.value.length === 3) {
        document.getElementById('lastFour').focus();
    }
});

document.getElementById('secondaryAreaCode').addEventListener('input', function (e) {
    if (this.value.length === 3) {
        document.getElementById('secondaryFirstThree').focus();
    }
});

document.getElementById('secondaryFirstThree').addEventListener('input', function (e) {
    if (this.value.length === 3) {
        document.getElementById('secondaryLastFour').focus();
    }
});

document.getElementById('noSecondaryPhone').addEventListener('change', function () {
    var secondaryPhoneFields = document.querySelectorAll('#secondaryAreaCode, #secondaryFirstThree, #secondaryLastFour');
    if (this.checked) {
        secondaryPhoneFields.forEach(function (field) {
            field.value = '';
            field.setAttribute('disabled', 'disabled');
            field.classList.add('fade-out');
        });
    } else {
        secondaryPhoneFields.forEach(function (field) {
            field.removeAttribute('disabled');
            field.classList.remove('fade-out');
        });
    }
});
document.getElementById('notextPhone').addEventListener('change', function () {
    var textPhoneFields = document.querySelectorAll('#textAreaCode, #textFirstThree, #textLastFour');
    if (this.checked) {
        textPhoneFields.forEach(function (field) {
            field.value = '';
            field.setAttribute('disabled', 'disabled');
            field.classList.add('fade-out');
        });
    } else {
        textPhoneFields.forEach(function (field) {
            field.removeAttribute('disabled');
            field.classList.remove('fade-out');
        });
    }
});
document.querySelectorAll('.closed-checkbox').forEach(function (checkbox) {
    checkbox.addEventListener('change', function () {
        var day = this.getAttribute('data-day');
        var fromInput = document.getElementById(day + 'From');
        var toInput = document.getElementById(day + 'To');
        if (this.checked) {
            fromInput.value = '';
            toInput.value = '';
            fromInput.setAttribute('disabled', 'disabled');
            toInput.setAttribute('disabled', 'disabled');
            fromInput.classList.add('fade-out');
            toInput.classList.add('fade-out');
        } else {
            fromInput.removeAttribute('disabled');
            toInput.removeAttribute('disabled');
            fromInput.classList.remove('fade-out');
            toInput.classList.remove('fade-out');
        }
    });
});

document.getElementById('businessForm').addEventListener('submit', function (e) {
    e.preventDefault();
    
    const formData = {
        businessName: document.getElementById('businessName').value,
        ownerName: document.getElementById('ownerName').value,
        businessAddress: document.getElementById('businessAddress').value,
        zipCode: document.getElementById('zipCode').value,
        city: document.getElementById('city').value,
        state: document.getElementById('state').value,
        phoneNumber: document.getElementById('areaCode').value + '-' + document.getElementById('firstThree').value + '-' + document.getElementById('lastFour').value,
        secondaryPhoneNumber: document.getElementById('secondaryAreaCode').value + '-' + document.getElementById('secondaryFirstThree').value + '-' + document.getElementById('secondaryLastFour').value,
        contactEmail: document.getElementById('contactEmail').value
    };

    localStorage.setItem('businessData', JSON.stringify(formData));
    window.location.href = 'video2.html';
});
</script>
</body>
